    "debug": "^3.1.0",
    "supports-color": "^5.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "0.0.30",
    "@types/mocha": "^2.2.47",
    "@types/node": "^8.0.46",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.0.0",
    "coveralls": "^3.0.0",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.0-rc"
  }
}